    <%- include(rootDir + 'components/works-filter.ejs') %>
    <%- include(rootDir + 'components/works-showcase.ejs') %>

    <!-- footer -->
    <%- include(rootDir + 'partials/footer.ejs') %>

    <!-- script -->
    <script src= "./components/home/home-banner.js"></script>
    <script src= "./components/home/home-background-sketch.js"></script>
    <script src= "./components/works/work-list.js"></script>
    <script src= "./components/works/works-showcase.js"></script>
