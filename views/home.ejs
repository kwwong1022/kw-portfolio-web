    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% let rootDir = './' %>
    <%- include(rootDir + 'partials/head.ejs') %>
    <link rel="stylesheet" href="/components/home/home.css">
    <link rel="stylesheet" href="/components/home/home-banner.css">
    <link rel="stylesheet" href="/components/works/works-filter.css">
    <link rel="stylesheet" href="/components/works/works-showcase.css">
