<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% let rootDir = './' %>
    <%- include(rootDir + 'partials/head.ejs') %>
    <link rel="stylesheet" href="/components/blog/blog.css">
    <link rel="stylesheet" href="/components/blog/blog-filter.css">
    <title>Blog | Kenneth Wong</title>
</head>

<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TK4X3ZR"
        height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    
    <!-- navbar -->
    <div id="curr-page"><%= page %></div>
    <%- include(rootDir + 'partials/navbar.ejs') %>

    <!-- banner sketch here: -->
    <div id="blog-banner-sketch" class="sketch fade-in" style="width: 100%; height: 230px"></div>
    
    <div class="section blog-content">
        <div class="section-content constraint">
            <!-- main content -->
            <div class="main-content fade-in">
                <!-- <div style="font-size: 1.6rem; font-weight: 300">Blog Post</div> -->
                <!-- blog-filter component -->
                <%- include(rootDir + 'components/blog-filter.ejs') %>

                <!-- blog-post list component -->
                <div class="blog-post-list"></div>

                <div class="page-selector">
                    <div class="btn previous"><span>&lt;</span></div>
                    <div class="btn page active"><span>1</span></div>
                    <div class="btn page"><span>2</span></div>
                    <div class="btn page"><span>3</span></div>
                    <!-- display if more than 4 pages -->
                    <div class="btn rest"><span>. . .</span></div>
                    <div class="btn page last"><span>6</span></div>
                    <div class="btn next"><span>&gt;</span></div>
                </div>

            </div>

            <!-- sub content -->
            <div class="sub-content">
                <!-- popular post -->
                <div class="popular-post fade-in">
                    <div style="font-size: 1.2rem; margin: 0 0 1.1rem; padding: 0 0 1.25rem; border-bottom: 1px solid rgba(0, 0, 0, .05); color: rgba(0, 0, 0, .8)">Popular Posts</div>
                </div>

                <!-- recent post -->
                <div class="recent-post fade-in">
                    <div style="font-size: 1.2rem; margin: 4rem 0 1.1rem; padding: 0 0 1.1rem; border-bottom: 1px solid rgba(0, 0, 0, .05); color: rgba(0, 0, 0, .8)">Recent Posts</div>
                </div>

            </div>
        </div>
    </div>

    <!-- footer -->
    <%- include(rootDir + 'partials/footer.ejs') %>

    <!-- script -->
    <script src= "./components/blog/blog-banner-sketch.js"></script>
    <script src= "./components/blog/blog-sub-content.js"></script>
    <script src= "./components/blog/blog-main-content.js"></script>
</body>
</html>